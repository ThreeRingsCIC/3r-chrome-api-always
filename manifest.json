{
  "manifest_version": 2,

  "name": "Three Rings API-Always",
  "description": "Sends your API key with every request to 3r.org.uk, enabling automated always-on authentication.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "icon19.png",
      "38": "icon48.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon64.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "webRequest", "webRequestBlocking",
    "storage",
    "https://www.3r.org.uk/"
  ]
}